<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/almostblack"
    tools:context=".SeatSelection">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mustard"
                android:text="@string/movies"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:id="@+id/titleSeats"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mustard"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="33dp"
                />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/marginTopRadioGroup"
            android:paddingHorizontal="@dimen/hpradioGroup">

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="1"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="2"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="3"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="4"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="5"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/marginTopRadioGroup"
            android:paddingHorizontal="@dimen/hpradioGroup">

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="6"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="7"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="8"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="9"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="10"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/marginTopRadioGroup"
            android:paddingHorizontal="@dimen/hpradioGroup">

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="11"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="12"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="13"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="14"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="15"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/marginTopRadioGroup"
            android:paddingHorizontal="@dimen/hpradioGroup">

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="16"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="17"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="18"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="19"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

            <RadioButton
                android:layout_width="@dimen/radioButton"
                android:layout_height="@dimen/radioButton"
                android:text="20"
                android:layout_marginHorizontal="@dimen/hmrb"
                android:textAlignment="center"
                android:textColor="@color/almostblack"
                android:background="@drawable/radio_selectable"
                android:button="@android:color/transparent"
                android:textSize="@dimen/rbtext"
                android:textStyle="bold"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@color/grisclaro"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="50dp"
            android:text="Screen"
            android:textSize="23sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:paddingHorizontal="@dimen/hpradioGroup"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/symbols"
                android:layout_height="@dimen/symbols"
                android:layout_gravity="center_vertical"
                android:src="@drawable/radio_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/letra"
                />

            <ImageView
                android:layout_width="@dimen/symbols"
                android:layout_height="@dimen/symbols"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/radio_disabled"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not \nAvailable"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/letra"/>

            <ImageView
                android:layout_width="@dimen/symbols"
                android:layout_height="@dimen/symbols"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/radio_selected"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your \nselection"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/letra"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu nombre"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="40dp"
            android:background="@color/almostblack"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/letra"
            android:inputType="textPersonName"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:textColor="@color/almostblack"
            android:text="Confirm"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="70dp"
            android:id="@+id/confirm"/>

    </LinearLayout>
</ScrollView>